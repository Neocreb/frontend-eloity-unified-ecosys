# Security Environment Configuration
# Copy this to your .env file and update the values

# Session Security
SESSION_SECRET=your-super-secure-session-secret-here-change-this-in-production

# JWT Security  
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production

# Database Security
DATABASE_URL=your-secure-database-connection-string

# API Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Security
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,mp4,avi,mov,pdf,doc,docx

# CORS Security
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:5000

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_NOSNIFF=true

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Encryption Keys (generate new ones for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SALT_ROUNDS=12

# API Keys (replace with your actual keys)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security Features
ENABLE_2FA=true
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=1440

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking