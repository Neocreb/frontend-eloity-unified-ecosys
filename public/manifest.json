{
  "name": "Eloity - Where Everything Connects",
  "short_name": "Eloity",
  "description": "Eloity - AI-powered ecosystem where everything connects. Social media, marketplace, crypto trading, and freelancing unified.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "categories": ["social", "finance", "business", "productivity"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Feed",
      "short_name": "Feed",
      "description": "View your social feed",
      "url": "/app/feed"
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your messages",
      "url": "/messages"
    },
    {
      "name": "Crypto",
      "short_name": "Trading",
      "description": "Crypto trading platform",
      "url": "/crypto"
    },
    {
      "name": "Marketplace",
      "short_name": "Shop",
      "description": "Browse and shop products",
      "url": "/marketplace"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.eloity.app",
      "id": "com.eloity.app"
    },
    {
      "platform": "ios",
      "url": "https://apps.apple.com/app/eloity/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+eloity",
      "url": "/handle?type=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".mov"]
      }
    }
  ]
}
